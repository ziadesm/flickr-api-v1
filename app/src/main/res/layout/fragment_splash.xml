<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ED000000"
    tools:context="echomachine.com.flickrapi_v1.ui.splash.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_logo_flickr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo_splash_screen"
        android:contentDescription="@string/logo_splash_screen" />

    <ProgressBar
        android:id="@+id/splash_progress_line"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="@android:color/white"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_splash_screen_powered"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:fontFamily="@font/indigo_daisy"/>

    <TextView
        android:id="@+id/splash_text_powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/logo_splash_screen"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_regular"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_splash_screen_powered"
        android:scaleType="centerCrop"
        android:src="@mipmap/bottom_splash_screen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>

</LinearLayout>